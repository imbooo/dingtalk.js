{
  "compilerOptions": {
//    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "outDir": "lib",
    "noUnusedLocals": true,
    //    "noImplicitAny": true,
    //    "esModuleInterop": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
